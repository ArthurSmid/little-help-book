
@inject NavigationManager navigationManager

    <RadzenCard @onclick="CardClicked">
        <b><RadzenLink Text="@Help.Name" Path="@(Url)"></RadzenLink></b>
        <RadzenLabel Text="Phone:"></RadzenLabel>
        <b>@Help.Phone</b>
        <RadzenLabel Text="Address:"></RadzenLabel>
        <b>@Help.Address</b>
    </RadzenCard>

@code {

    [Parameter]
    public Help Help { get; set; }

    private string Url => $"service/{Help.Id}";

    public void CardClicked(EventArgs e)
    {
        navigationManager.NavigateTo(Url);
    }

}
